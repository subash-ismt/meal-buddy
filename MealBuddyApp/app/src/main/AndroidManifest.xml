<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Configure the Permission -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainActivity">
        <activity
            android:name="com.ismt.learning.ContactActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.RecipeListActivity"
            android:exported="false"
            android:theme="@style/Theme.MainActivity" />
        <activity
            android:name=".activity.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MainActivity"></activity>
        <activity
            android:name=".activity.RegistrationActivity"
            android:exported="false" />

        <!-- Admin AddRecipe activity -->
        <activity
            android:name=".activity.AddRecipeActivity"
            android:exported="false"
            android:theme="@style/Theme.MainActivity" />

    </application>

</manifest>